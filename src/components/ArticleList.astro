---
import type { CollectionEntry } from "astro:content";
import { categoryMeta, toYMD } from "./category";

const { posts, limit, title = "記事" } = Astro.props as {
  posts: CollectionEntry<"posts">[];
  limit?: number;
  title?: string;
};

const shown = typeof limit === "number" ? posts.slice(0, limit) : posts;

const BASE = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";

// 「新しい記事一覧」への導線（後で検索/絞り込みをここに実装）
const allPostsHref = `${BASE}posts/all`;

function thumbSrc(raw?: string) {
  if (!raw) return null;

  // 外部URLはそのまま
  if (raw.startsWith("http://") || raw.startsWith("https://")) {
    return raw;
  }

  // 先頭が / の場合（例: /images/...）
  // → GitHub Pages 用に BASE を必ず付ける
  if (raw.startsWith("/")) {
    return `${BASE}${raw.slice(1)}`;
  }

  // それ以外（例: images/...）
  const clean = raw.replace(/^\/+/, "");
  return `${BASE}${clean}`;
}
---
<section class="plainSection">
  <div class="sectionHead">
    <h2 class="h2" style="margin:0;">{title}</h2>
  </div>

  <ul class="postList">
    {shown.map((p) => {
      const meta = categoryMeta[p.data.category];
      const t = thumbSrc((p.data as any).thumbnail as string | undefined);

      return (
        <li>
          <a class="postCard" data-category={p.data.category} href={`${BASE}posts/${p.slug}`}>
            <div class="thumbTop" aria-hidden="true">
              {t ? (
                <img class="thumbBookmark" src={t} alt="" loading="lazy" />
              ) : (
                <span class="thumbBookmarkPh"></span>
              )}
            </div>

            <div class="postRow">
              <span class="left">
                <span class="icon" aria-hidden="true">{meta.icon}</span>
                <span class="category">{p.data.category}</span>
                <span class="sep">｜</span>
                <strong class="title">{p.data.title}</strong>
              </span>

              <span class="right">
                <span class="date">{toYMD(p.data.date)}</span>
                {p.data.tags?.length ? (
                  <span class="tags">#{p.data.tags.join(" #")}</span>
                ) : null}
              </span>
            </div>
          </a>
        </li>
      );
    })}
  </ul>
</section>

<style>
  .plainSection { padding: 0; margin: 0; }
  .sectionHead { margin: 0 0 8px; }

  .postList {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .postCard {
    display: block;
    padding: 10px 0;
    border-bottom: 1px dotted var(--line);
    text-decoration: none;
    color: var(--ink);
  }

  .postCard:hover {
    opacity: 0.9;
  }

  .thumbTop {
    display: block;
    margin: 0 0 10px;
    /* デバッグしたい時だけON:
    outline: 1px solid red;
    */
  }

  /* 横長サムネ（栞比率そのまま横向き） */
  .thumbBookmark,
  .thumbBookmarkPh {
    width: 100%;
    height: 120px;
    border-radius: 0px;
    overflow: hidden;
    border: 1px solid rgba(0,0,0,0.06);
    background: rgba(0,0,0,0.03);
    display: block;
  }

  .thumbBookmark {
    width: 100%;
    height: 120px;
    object-fit: cover;
    display: block;
  }

  .thumbBookmarkPh {
    background: repeating-linear-gradient(
      45deg,
      rgba(0,0,0,0.03),
      rgba(0,0,0,0.03) 6px,
      rgba(0,0,0,0.015) 6px,
      rgba(0,0,0,0.015) 12px
    );
    opacity: 0.55;
  }

  .postRow {
    display: flex;
    justify-content: space-between;
    gap: 12px;
    align-items: baseline;
  }

  .left {
    display: flex;
    gap: 6px;
    align-items: baseline;
    flex-wrap: wrap;
  }

  .right {
    display: flex;
    gap: 10px;
    align-items: baseline;
    font-size: 0.85em;
    color: var(--muted);
    white-space: nowrap;
  }

  .category {
    font-size: 0.85em;
    color: var(--muted);
  }

  .sep { color: var(--muted); }
  .tags { color: var(--muted); }

  @media (max-width: 640px) {
    .postRow { flex-direction: column; gap: 4px; }
    .right { white-space: normal; }
  }
</style>