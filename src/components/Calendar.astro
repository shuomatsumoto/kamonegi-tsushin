---
import type { CollectionEntry } from "astro:content";

type Plan = {
  date: string; // YYYY-MM-DD
  title: string;
  category: "しんぶん" | "自然と科学" | "文化と芸術" | "せいかつ" | "研究室" | "雑記";
  status?: string;
};

const { posts, plans = [], year, month } = Astro.props as {
  posts: CollectionEntry<"posts">[];
  plans?: Plan[];
  year?: number;
  month?: number; // 1-12
};

const now = new Date();
const Y = year ?? now.getFullYear();
const M = month ?? (now.getMonth() + 1);


const first = new Date(Y, M - 1, 1);
const last = new Date(Y, M, 0);
const startDow = first.getDay();
const daysInMonth = last.getDate();

const monthPrefix = `${Y}-${String(M).padStart(2, "0")}-`;

const postDates = new Set(posts.map((p) => p.data.date).filter((d) => d.startsWith(monthPrefix)));

const planDates = new Set(plans.map((p) => p.date).filter((d) => d.startsWith(monthPrefix)));

const weeks: Array<Array<number | null>> = [];
let w: Array<number | null> = [];
for (let i = 0; i < startDow; i++) w.push(null);
for (let d = 1; d <= daysInMonth; d++) {
  w.push(d);
  if (w.length === 7) {
    weeks.push(w);
    w = [];
  }
}
if (w.length) {
  while (w.length < 7) w.push(null);
  weeks.push(w);
}

const monthLabel = `${Y}年${M}月`;
const dow = ["日", "月", "火", "水", "木", "金", "土"];
function ymd(day: number) {
  return `${Y}-${String(M).padStart(2, "0")}-${String(day).padStart(2, "0")}`;
}

const BASE = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";

---
<section class="plainSection">
  <div class="sectionHead">
    <h2 class="h2" style="margin:0;">{monthLabel}</h2>
    <div class="small mono">calendar</div>
  </div>

  <div class="calGrid">
    {dow.map((d) => (
      <div class="calDow">
        {d}
      </div>
    ))}

    {weeks.flat().map((day) => {
      if (day === null) return <div style="height:40px;"></div>;

      const key = ymd(day);
      const hasPost = postDates.has(key);
      const hasPlan = planDates.has(key);

      return (
        <a href={`${BASE}date/${key}`} style="text-decoration:none;">
          <div
            class="calCell"
            data-ymd={key}
            title={hasPost ? "記事あり" : hasPlan ? "執筆予定あり" : ""}
          >
            <span class="calNum mono">{day}</span>
            {/* ● = 記事あり / ○ = 予定あり */}
            {hasPost && (
              <span aria-hidden="true" class="mark">
                ●
              </span>
            )}
            {!hasPost && hasPlan && (
              <span aria-hidden="true" class="mark">
                ○
              </span>
            )}
          </div>
        </a>
      );
    })}
  </div>

  <script is:inline>
    (function () {
      const BASE = {JSON.stringify(BASE)};
      // Asia/Tokyo での「今日」を YYYY-MM-DD で作る
      const fmt = new Intl.DateTimeFormat("en-CA", {
        timeZone: "Asia/Tokyo",
        year: "numeric",
        month: "2-digit",
        day: "2-digit",
      });
      const today = fmt.format(new Date());

      const cell = document.querySelector(`[data-ymd="${today}"]`);
      if (!cell) return;

      cell.classList.add("isToday");

      // すでに追加済みなら二重に入れない
      if (cell.querySelector(".todayStamp")) return;

      const img = document.createElement("img");
      img.src = `${BASE}images/deco/sun2.jpg`;
      img.alt = "";
      img.setAttribute("aria-hidden", "true");
      img.className = "todayStamp";
      img.loading = "lazy";
      cell.appendChild(img);
    })();
  </script>

  <div class="calLegend small">● = 記事がある / ○ = 執筆予定がある</div>

  <style>
    .plainSection {
      padding: 0;
      margin: 0;
    }

    .sectionHead {
      display: flex;
      align-items: baseline;
      justify-content: space-between;
      gap: 12px;
      margin: 0 0 8px;
    }

    .calGrid {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      gap: 8px;
    }

    .calDow {
      text-align: center;
      font-size: 0.85em;
      color: var(--muted);
    }

    .calCell {
      height: 44px;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      border-bottom: 1px dotted var(--line);
      border-radius: 10px;
    }

    .calCell:hover {
      background: rgba(0,0,0,0.03);
    }

    .calNum {
      font-size: 0.95em;
    }

    .todayStamp {
      position: absolute;
      top: 2px;
      right: 2px;
      width: 28px;
      height: 20px;
      object-fit: cover;
      opacity: 1;
      border-radius: 5px;
      z-index: 1;
    }

    .calCell.isToday {
      outline: 1px solid rgba(200, 150, 70, 0.28);
      background: rgba(230, 190, 120, 0.10);
    }

    .mark {
      position: absolute;
      bottom: 6px;
      right: 8px;
      font-size: 12px;
      color: var(--muted);
    }

    .calLegend {
      margin-top: 10px;
    }
  </style>
</section>
