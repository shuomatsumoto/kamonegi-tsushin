---
import type { CollectionEntry } from "astro:content";

type Plan = {
  date: string; // YYYY-MM-DD
  title: string;
  category: "しんぶん" | "自然と科学" | "文化と芸術" | "せいかつ" | "研究室" | "雑記";
  status?: string;
};

const { posts, plans = [], year, month } = Astro.props as {
  posts: CollectionEntry<"posts">[];
  plans?: Plan[];
  year?: number;
  month?: number; // 1-12
};

const now = new Date();
const Y = year ?? now.getFullYear();
const M = month ?? (now.getMonth() + 1);


const first = new Date(Y, M - 1, 1);
const last = new Date(Y, M, 0);
const startDow = first.getDay();
const daysInMonth = last.getDate();

const monthPrefix = `${Y}-${String(M).padStart(2, "0")}-`;

const postDates = new Set(posts.map((p) => p.data.date).filter((d) => d.startsWith(monthPrefix)));

const planDates = new Set(plans.map((p) => p.date).filter((d) => d.startsWith(monthPrefix)));

const weeks: Array<Array<number | null>> = [];
let w: Array<number | null> = [];
for (let i = 0; i < startDow; i++) w.push(null);
for (let d = 1; d <= daysInMonth; d++) {
  w.push(d);
  if (w.length === 7) {
    weeks.push(w);
    w = [];
  }
}
if (w.length) {
  while (w.length < 7) w.push(null);
  weeks.push(w);
}

const monthLabelInitial = `${Y}年${M}月`;
const dow = ["日", "月", "火", "水", "木", "金", "土"];
function ymd(day: number) {
  return `${Y}-${String(M).padStart(2, "0")}-${String(day).padStart(2, "0")}`;
}

const BASE = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";

const postDatesAll = posts.map((p) => p.data.date);
const planDatesAll = plans.map((p) => p.date);

---
<section class="plainSection">
  <div class="sectionHead">
    <h2 class="h2" style="margin:0;" id="calMonthLabel">{monthLabelInitial}</h2>
    <div class="small mono">calendar</div>
  </div>

  <div class="calGrid" id="calGrid" data-year={Y} data-month={M}>
    {dow.map((d) => (
      <div class="calDow">
        {d}
      </div>
    ))}

    {weeks.flat().map((day) => {
      if (day === null) return <div style="height:40px;"></div>;

      const key = ymd(day);
      const hasPost = postDates.has(key);
      const hasPlan = planDates.has(key);

      return (
        <a href={`${BASE}date/${key}`} style="text-decoration:none;">
          <div
            class="calCell"
            data-ymd={key}
            title={hasPost ? "記事あり" : hasPlan ? "執筆予定あり" : ""}
          >
            <span class="calNum mono">{day}</span>
            {/* ● = 記事あり / ○ = 予定あり */}
            {hasPost && (
              <span aria-hidden="true" class="mark">
                ●
              </span>
            )}
            {!hasPost && hasPlan && (
              <span aria-hidden="true" class="mark">
                ○
              </span>
            )}
          </div>
        </a>
      );
    })}
  </div>

  <script is:inline define:vars={{ BASE, postDatesAll, planDatesAll }}>
    (function () {
      function ensureSlashEnd(s) {
        if (!s) return "/";
        return s.charAt(s.length - 1) === "/" ? s : s + "/";
      }

      function tokyoTodayYMD() {
        // en-CA => YYYY-MM-DD
        var fmt = new Intl.DateTimeFormat("en-CA", {
          timeZone: "Asia/Tokyo",
          year: "numeric",
          month: "2-digit",
          day: "2-digit",
        });
        return fmt.format(new Date());
      }

      function applyTodayStamp() {
        var grid = document.getElementById("calGrid");
        if (!grid) return false;

        var base = ensureSlashEnd(BASE);
        var today = tokyoTodayYMD();

        var cell = grid.querySelector('[data-ymd="' + today + '"]');
        if (!cell) return false;

        cell.classList.add("isToday");

        // already stamped?
        if (cell.querySelector(".todayStamp")) return true;

        var img = document.createElement("img");
        img.src = base + "images/deco/sun2.jpg";
        img.alt = "";
        img.setAttribute("aria-hidden", "true");
        img.className = "todayStamp";
        img.loading = "lazy";

        // Inline styles so Astro-scoped CSS is not required
        img.style.position = "absolute";
        img.style.top = "2px";
        img.style.right = "2px";
        img.style.width = "22px";
        img.style.height = "14px";
        img.style.objectFit = "cover";
        img.style.opacity = "0.95";
        img.style.borderRadius = "4px";
        img.style.zIndex = "1";

        cell.appendChild(img);
        return true;
      }

      // DOM timing differences: retry a bit
      var tries = 0;
      function retry() {
        if (applyTodayStamp()) return;
        tries += 1;
        if (tries >= 30) return;
        setTimeout(retry, 50);
      }

      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", retry, { once: true });
      } else {
        retry();
      }
    })();
  </script>

  <div class="calLegend small">● = 記事がある / ○ = 執筆予定がある</div>

  <style>
    .plainSection {
      padding: 0;
      margin: 0;
    }

    .sectionHead {
      display: flex;
      align-items: baseline;
      justify-content: space-between;
      gap: 12px;
      margin: 0 0 8px;
    }

    .calGrid {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      gap: 6px;
    }

    .calDow {
      text-align: center;
      font-size: 0.78em;
      color: var(--muted);
      padding-bottom: 2px;
    }

    .calCell {
      height: 34px;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      border: 1px solid rgba(0,0,0,0.06);
      border-radius: 7px;
      background: transparent;
    }

    .calCell:hover {
      background: rgba(0,0,0,0.02);
    }

    .calNum {
      font-size: 0.9em;
    }


    .calCell.isToday {
      border-color: rgba(200, 150, 70, 0.32);
      background: rgba(230, 190, 120, 0.06);
    }

    .mark {
      position: absolute;
      bottom: 4px;
      right: 6px;
      font-size: 11px;
      color: var(--muted);
      opacity: 0.85;
    }

    .calLegend {
      margin-top: 8px;
      color: var(--muted);
      font-size: 0.85em;
    }
  </style>
</section>
