---
import type { CollectionEntry } from "astro:content";

type Plan = {
  date: string; // YYYY-MM-DD
  title: string;
  category: "しんぶん" | "自然と科学" | "文化と芸術" | "せいかつ" | "研究室" | "雑記";
  status?: string;
};

const { posts, plans = [], year, month } = Astro.props as {
  posts: CollectionEntry<"posts">[];
  plans?: Plan[];
  year?: number;
  month?: number; // 1-12
};

const now = new Date();
const Y = year ?? now.getFullYear();
const M = month ?? (now.getMonth() + 1);

// 今日（ローカル日付で YYYY-MM-DD）
const localToday = new Date();
const todayYMD = `${localToday.getFullYear()}-${String(localToday.getMonth() + 1).padStart(2, "0")}-${String(
  localToday.getDate()
).padStart(2, "0")}`;

const first = new Date(Y, M - 1, 1);
const last = new Date(Y, M, 0);
const startDow = first.getDay();
const daysInMonth = last.getDate();

const monthPrefix = `${Y}-${String(M).padStart(2, "0")}-`;

const postDates = new Set(posts.map((p) => p.data.date).filter((d) => d.startsWith(monthPrefix)));

const planDates = new Set(plans.map((p) => p.date).filter((d) => d.startsWith(monthPrefix)));

const weeks: Array<Array<number | null>> = [];
let w: Array<number | null> = [];
for (let i = 0; i < startDow; i++) w.push(null);
for (let d = 1; d <= daysInMonth; d++) {
  w.push(d);
  if (w.length === 7) {
    weeks.push(w);
    w = [];
  }
}
if (w.length) {
  while (w.length < 7) w.push(null);
  weeks.push(w);
}

const monthLabel = `${Y}年${M}月`;
const dow = ["日", "月", "火", "水", "木", "金", "土"];
function ymd(day: number) {
  return `${Y}-${String(M).padStart(2, "0")}-${String(day).padStart(2, "0")}`;
}

const BASE = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";

---
<section class="card">
  <div style="display:flex; align-items:baseline; justify-content:space-between; gap:10px;">
    <h2 class="h2" style="margin:0;">{monthLabel}</h2>
    <div class="small mono">calendar</div>
  </div>

  <div class="hr" style="margin:12px 0;"></div>

  <div style="display:grid; grid-template-columns: repeat(7, 1fr); gap: 8px;">
    {dow.map((d) => (
      <div class="small" style="text-align:center;">
        {d}
      </div>
    ))}

    {weeks.flat().map((day) => {
      if (day === null) return <div style="height:40px;"></div>;

      const key = ymd(day);
      const hasPost = postDates.has(key);
      const hasPlan = planDates.has(key);
      const isToday = key === todayYMD;

      return (
        <a href={`${BASE}date/${key}`} style="text-decoration:none;">
          <div
            class="item"
            style={`height:40px; display:flex; align-items:center; justify-content:center; position:relative;`}
            title={isToday ? "今日" : hasPost ? "記事あり" : hasPlan ? "執筆予定あり" : ""}
          >
            <span class="mono">{day}</span>

            {/* 今日だけ：sun2.jpg を表示（右上・小さめ・浮かせない） */}
            {isToday && (
            <img
              src={`${BASE}images/deco/sun2.jpg`}
              alt=""
              aria-hidden="true"
              style="position:absolute; top:-10px; right:2px; width:30px; height:20px; object-fit:cover; opacity:1.0; border-radius:5px;"
              loading="lazy"
            />

            )}

            {/* ● = 記事あり / ○ = 予定あり */}
            {hasPost && (
              <span aria-hidden="true" style="position:absolute; bottom:6px; right:8px; font-size:12px;">
                ●
              </span>
            )}
            {!hasPost && hasPlan && (
              <span aria-hidden="true" style="position:absolute; bottom:6px; right:8px; font-size:12px;">
                ○
              </span>
            )}
          </div>
        </a>
      );
    })}
  </div>

  <div class="small" style="margin-top:10px;">● = 記事がある / ○ = 執筆予定がある</div>
</section>
