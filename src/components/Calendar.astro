---
import type { CollectionEntry } from "astro:content";

const { posts, year, month } = Astro.props as {
  posts: CollectionEntry<"posts">[];
  year?: number;
  month?: number; // 1-12
};

const now = new Date();
const Y = year ?? now.getFullYear();
const M = month ?? (now.getMonth() + 1);


const first = new Date(Y, M - 1, 1);
const last = new Date(Y, M, 0);
const startDow = first.getDay();
const daysInMonth = last.getDate();

const monthPrefix = `${Y}-${String(M).padStart(2, "0")}-`;

const postCountByDate = posts.reduce((acc, p) => {
  const d = p.data.date;
  if (!d.startsWith(monthPrefix)) return acc;
  acc.set(d, (acc.get(d) ?? 0) + 1);
  return acc;
}, new Map<string, number>());

const weeks: Array<Array<number | null>> = [];
let w: Array<number | null> = [];
for (let i = 0; i < startDow; i++) w.push(null);
for (let d = 1; d <= daysInMonth; d++) {
  w.push(d);
  if (w.length === 7) {
    weeks.push(w);
    w = [];
  }
}
if (w.length) {
  while (w.length < 7) w.push(null);
  weeks.push(w);
}

const monthLabelInitial = `${Y}年${M}月`;
const dow = ["日", "月", "火", "水", "木", "金", "土"];
function ymd(day: number) {
  return `${Y}-${String(M).padStart(2, "0")}-${String(day).padStart(2, "0")}`;
}

const BASE = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";

---
<section class="plainSection">
  <div class="sectionHead">
    <h2 id="calMonthLabel">{monthLabelInitial}</h2>
    <div class="small mono">calendar</div>
  </div>

  <div class="calGrid" id="calGrid" data-year={Y} data-month={M}>
    {dow.map((d) => (
      <div class="calDow">
        {d}
      </div>
    ))}

    {weeks.flat().map((day) => {
      if (day === null) return <div class="calBlank"></div>;

      const key = ymd(day);
      const postCount = postCountByDate.get(key) ?? 0;
      const hasPost = postCount > 0;

      return (
        <a href={`${BASE}date/${key}`} class="calLink">
          <div
            class="calCell"
            data-ymd={key}
            title={hasPost ? "記事あり" : ""}
          >
            <span class="calNum mono">{day}</span>
            {/* 記事数 */}
            {hasPost && (
              <span aria-hidden="true" class="mark">
                {postCount}
              </span>
            )}
          </div>
        </a>
      );
    })}
  </div>

  <script is:inline>
    (function () {
      function tokyoTodayYMD() {
        // en-CA => YYYY-MM-DD
        var fmt = new Intl.DateTimeFormat("en-CA", {
          timeZone: "Asia/Tokyo",
          year: "numeric",
          month: "2-digit",
          day: "2-digit",
        });
        return fmt.format(new Date());
      }

      function applyTodayStamp() {
        var grid = document.getElementById("calGrid");
        if (!grid) return false;

        var today = tokyoTodayYMD();

        var cell = grid.querySelector('[data-ymd="' + today + '"]');
        if (!cell) return false;

        cell.classList.add("isToday");
        return true;
      }

      // DOM timing differences: retry a bit
      var tries = 0;
      function retry() {
        if (applyTodayStamp()) return;
        tries += 1;
        if (tries >= 30) return;
        setTimeout(retry, 50);
      }

      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", retry, { once: true });
      } else {
        retry();
      }
    })();
  </script>

  <style>
    .plainSection {
      padding: 0;
      margin: 0;
    }

    .sectionHead {
      display: flex;
      align-items: baseline;
      justify-content: space-between;
      gap: 12px;
      margin: 0 0 10px;
    }

    .sectionHead h2 {
      margin: 0;
      font-size: 0.92rem;
      line-height: 1.15;
      font-weight: 400;
      color: var(--muted);
      letter-spacing: 0.04em;
    }

    .calGrid {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      gap: 8px;
      padding: 10px;
      border: 1px solid rgba(64, 54, 40, 0.13);
      border-radius: 0;
      background: #fff;
    }

    .calLink {
      text-decoration: none;
    }

    .calDow {
      text-align: center;
      font-size: 0.7rem;
      color: var(--muted);
      letter-spacing: 0.04em;
      padding-bottom: 3px;
      text-transform: uppercase;
      opacity: 0.9;
    }

    .calCell {
      height: 38px;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      border: 1px solid rgba(64, 54, 40, 0.08);
      border-radius: 0;
      background: #fff;
      transition: border-color 0.15s ease, background 0.15s ease;
    }

    .calCell:hover {
      border-color: rgba(77, 92, 66, 0.4);
      background: rgba(77, 92, 66, 0.04);
    }

    .calNum {
      font-size: 0.88rem;
      color: var(--ink);
    }


    .calCell.isToday {
      border-color: rgba(77, 92, 66, 0.5);
      background: rgba(77, 92, 66, 0.08);
    }

    .mark {
      position: absolute;
      bottom: 5px;
      right: 6px;
      font-size: 0.66rem;
      font-weight: 600;
      color: var(--accent);
      opacity: 0.82;
    }

    .calBlank {
      height: 38px;
      border-radius: 0;
      background: rgba(64, 54, 40, 0.03);
    }

    .calLegend {
      margin-top: 10px;
      color: var(--muted);
      font-size: 0.76rem;
      text-align: right;
    }
  </style>
</section>
