---
import BaseLayout from "../../layouts/BaseLayout.astro";
const BASE = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";
const nextHref = `${BASE}study`;
---
<BaseLayout title="研究・翻訳 | かもねぎ通信">
  <section class="redirectPage">
    <p class="small">このページは移動しました。</p>
    <p><a href={nextHref}>研究・翻訳ページへ移動</a></p>
  </section>

  <script is:inline define:vars={{ nextHref }}>
    window.location.replace(nextHref);
  </script>
</BaseLayout>

<style>
  .redirectPage {
    width: min(100%, 940px);
    margin-inline: auto;
    padding: 20px 0;
  }
</style>
