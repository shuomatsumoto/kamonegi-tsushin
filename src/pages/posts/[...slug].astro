---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const BASE = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";

export async function getStaticPaths() {
  const posts = await getCollection("posts", ({ data }) => !data.draft);
  return posts.map((p) => ({ params: { slug: p.slug }, props: { post: p } }));
}

const { post } = Astro.props;
const { Content } = await post.render();

function thumbSrc(raw?: string) {
  if (!raw) return null;

  // Full URL
  if (raw.startsWith("http://") || raw.startsWith("https://")) return raw;

  // Absolute path like /images/... must be prefixed with BASE on GitHub Pages
  if (raw.startsWith("/")) return `${BASE}${raw.slice(1)}`;

  // Relative path -> treat as under BASE
  const clean = raw.replace(/^\/+/, "");
  return `${BASE}${clean}`;
}
---
<BaseLayout title={`${post.data.title} | かもねぎ通信`}>
  <article class="plainArticle">
    {post.data.thumbnail ? (
      <div class="heroThumb" aria-hidden="true">
        <img
          src={thumbSrc(post.data.thumbnail)}
          alt=""
          class="heroImg"
          loading="lazy"
        />
      </div>
    ) : null}
    <div class="articleMeta">
      {post.data.series ? (
        <a href={`${BASE}series/${encodeURIComponent(post.data.series)}`} class="seriesLink">
          {post.data.series}
        </a>
      ) : null}

      <div class="metaLine">
        <a href={`${BASE}category/${encodeURIComponent(post.data.category)}`} class="categoryLink">
          {post.data.category}
        </a>

        {post.data.tags?.length
          ? (
              <span class="small tags">
                {post.data.tags.map((t) => (
                  <>
                    <a href={`${BASE}tags/${encodeURIComponent(t)}`} class="tagLink">#{t}</a>{" "}
                  </>
                ))}
              </span>
            )
          : null}

        <span class="small mono dateText">{post.data.date}</span>
      </div>
    </div>

    <h1 class="h1">{post.data.title}</h1>

    <div class="prose">
      <Content />
    </div>

    {post.data.supportUrl ? (
      <section class="supportBox" aria-label="あと払い">
        <h2 class="supportTitle">この記事に値段を付ける</h2>
        <form
          id="supportForm"
          class="supportForm"
          action={post.data.supportUrl}
          method="get"
          target="_blank"
          rel="noopener noreferrer"
        >
          <input type="hidden" name="wanted" value="true" />
          <input type="hidden" name="price" id="supportPrice" value="" />
          <label class="supportAmountLabel">
            <span class="srOnly">金額</span>
            <input
              class="supportAmountInput"
              type="number"
              min="0"
              step="1"
              id="supportAmountJpy"
              inputmode="numeric"
              placeholder="0"
            />
            <span class="yenSuffix" aria-hidden="true">円</span>
          </label>
          <button class="supportButton" type="submit">決定</button>
        </form>
      </section>
    ) : null}
  </article>

  {post.data.supportUrl ? (
    <script is:inline>
      (function () {
        var form = document.getElementById("supportForm");
        var amount = document.getElementById("supportAmountJpy");
        var price = document.getElementById("supportPrice");
        if (!form || !amount || !price) return;

        form.addEventListener("submit", function (e) {
          var jpy = Math.max(0, Number(amount.value || "0"));
          if (!jpy) {
            e.preventDefault();
            amount.focus();
            return;
          }
          // Gumroad side appears to treat this with a 100x scale mismatch for JPY.
          // Also apply a 90% factor to offset 10% tax uplift.
          var adjustedJpy = jpy * 0.9;
          price.value = (adjustedJpy / 100).toFixed(2);
        });
      })();
    </script>
  ) : null}
</BaseLayout>

<style>
  .plainArticle {
    padding: 0;
    margin: 0;
    padding-top: 15px;
    max-width: 760px;
    margin-inline: auto;
  }

  .heroThumb {
    margin: 0 0 16px;
    overflow: hidden;
    border: none;
    background: none;
  }

  .heroImg {
    display: block;
    width: auto;
    max-width: 100%;
    height: auto; /* 元の縦横比を完全維持 */
    max-height: clamp(360px, 55vw, 720px);
  }

  .prose :global(p) {
    margin: 0 0 1.05em;
    font-size: 1rem;
  }

  .prose :global(h2) {
    margin: 1.8em 0 0.7em;
    font-size: 1.18rem;
    font-weight: 500;
  }

  .prose :global(h3) {
    margin: 1.5em 0% 0.6em;
    font-size: 1.02rem;
    font-weight: 400;
    color: var(--muted);
    opacity: 0.9;
  }

  .prose :global(a) {
    text-decoration: underline;
  }

  .prose :global(blockquote) {
    margin: 1.2em 0;
    padding: 10px 14px;
    border-left: 3px solid var(--line);
    background: rgba(255,255,255,0.35);
    border-radius: 10px;
  }

  .articleMeta {
    display: grid;
    gap: 6px;
    font-size: 0.78rem;
    color: var(--muted);
    margin-bottom: 8px;
  }

  .metaLine {
    display: flex;
    gap: 8px;
    align-items: baseline;
    flex-wrap: wrap;
  }

  .categoryLink {
    text-decoration: none;
    color: var(--muted);
  }

  .categoryLink:hover {
    opacity: 0.75;
  }

  .seriesLink {
    text-decoration: none;
    color: #4d5f42;
    font-weight: 700;
    font-size: 0.86rem;
    line-height: 1.25;
  }

  .seriesLink:hover {
    opacity: 0.82;
  }

  .tags {
    display: flex;
    gap: 6px;
    flex-wrap: wrap;
  }

  .tagLink {
    text-decoration: none;
    color: var(--muted);
  }

  .tagLink:hover {
    opacity: 0.75;
  }

  .dateText {
    opacity: 0.78;
  }

  .plainArticle .h1 {
    font-size: clamp(1.45rem, 2.7vw, 1.82rem);
    line-height: 1.38;
    margin: 0 0 16px;
  }

  .supportBox {
    margin-top: 32px;
    padding-top: 18px;
    border-top: 1px dotted var(--line);
    display: grid;
    gap: 8px;
  }

  .supportTitle {
    margin: 0;
    font-size: 0.96rem;
    line-height: 1.4;
    color: var(--ink);
    font-weight: 500;
  }

  .supportForm {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 8px;
  }

  .supportAmountLabel {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    color: var(--muted);
    font-size: 0.84rem;
  }

  .supportAmountInput {
    width: 110px;
    height: 34px;
    border: 1px solid rgba(64, 54, 40, 0.26);
    background: #fff;
    color: var(--ink);
    font: inherit;
    font-size: 0.84rem;
    padding: 0 10px;
  }

  .yenSuffix {
    line-height: 1;
    color: var(--muted);
  }

  .supportButton {
    text-decoration: none;
    border: 1px solid rgba(64, 54, 40, 0.26);
    background: #fff;
    color: var(--ink);
    font-size: 0.84rem;
    line-height: 1;
    padding: 8px 12px;
  }

  .supportButton:hover {
    background: #f8f6f0;
  }

  .srOnly {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>
