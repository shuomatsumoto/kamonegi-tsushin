---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const BASE = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";

export async function getStaticPaths() {
  const posts = await getCollection("posts", ({ data }) => !data.draft);
  return posts.map((p) => ({ params: { slug: p.slug }, props: { post: p } }));
}

const { post } = Astro.props;
const { Content } = await post.render();

function thumbSrc(raw?: string) {
  if (!raw) return null;

  // Full URL
  if (raw.startsWith("http://") || raw.startsWith("https://")) return raw;

  // Absolute path like /images/... must be prefixed with BASE on GitHub Pages
  if (raw.startsWith("/")) return `${BASE}${raw.slice(1)}`;

  // Relative path -> treat as under BASE
  const clean = raw.replace(/^\/+/, "");
  return `${BASE}${clean}`;
}
---
<BaseLayout title={`${post.data.title} | かもねぎ通信`}>
  <article class="plainArticle">
    {post.data.thumbnail ? (
      <div class="heroThumb" aria-hidden="true">
        <img
          src={thumbSrc(post.data.thumbnail)}
          alt=""
          class="heroImg"
          loading="lazy"
        />
      </div>
    ) : null}
    <div class="articleMeta">
      {post.data.series ? (
        <a href={`${BASE}series/${encodeURIComponent(post.data.series)}`} class="seriesLink">
          {post.data.series}
        </a>
      ) : null}

      <div class="metaLine">
        <a href={`${BASE}category/${encodeURIComponent(post.data.category)}`} class="categoryLink">
          {post.data.category}
        </a>

        {post.data.tags?.length
          ? (
              <span class="small tags">
                {post.data.tags.map((t) => (
                  <>
                    <a href={`${BASE}tags/${encodeURIComponent(t)}`} class="tagLink">#{t}</a>{" "}
                  </>
                ))}
              </span>
            )
          : null}

        <span class="small mono dateText">{post.data.date}</span>
      </div>
    </div>

    <h1 class="h1">{post.data.title}</h1>

    <div class="prose">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .plainArticle {
    padding: 0;
    margin: 0;
    padding-top: 15px;
    max-width: 760px;
    margin-inline: auto;
  }

  .heroThumb {
    margin: 0 0 16px;
    overflow: hidden;
    border: none;
    background: none;
  }

  .heroImg {
    display: block;
    width: auto;
    max-width: 100%;
    height: auto; /* 元の縦横比を完全維持 */
    max-height: clamp(360px, 55vw, 720px);
  }

  .prose :global(p) {
    margin: 0 0 1.05em;
    font-size: 1rem;
  }

  .prose :global(h2) {
    margin: 1.8em 0 0.7em;
    font-size: 1.18rem;
    font-weight: 500;
  }

  .prose :global(h3) {
    margin: 1.5em 0% 0.6em;
    font-size: 1.02rem;
    font-weight: 400;
    color: var(--muted);
    opacity: 0.7;
  }

  .prose :global(a) {
    text-decoration: underline;
  }

  .prose :global(blockquote) {
    margin: 1.2em 0;
    padding: 10px 14px;
    border-left: 3px solid var(--line);
    background: rgba(255,255,255,0.35);
    border-radius: 10px;
  }

  .articleMeta {
    display: grid;
    gap: 6px;
    font-size: 0.78rem;
    color: var(--muted);
    margin-bottom: 8px;
  }

  .metaLine {
    display: flex;
    gap: 8px;
    align-items: baseline;
    flex-wrap: wrap;
  }

  .categoryLink {
    text-decoration: none;
    color: var(--muted);
  }

  .categoryLink:hover {
    opacity: 0.75;
  }

  .seriesLink {
    text-decoration: none;
    color: #4d5f42;
    font-weight: 700;
    font-size: 0.86rem;
    line-height: 1.25;
  }

  .seriesLink:hover {
    opacity: 0.82;
  }

  .tags {
    display: flex;
    gap: 6px;
    flex-wrap: wrap;
  }

  .tagLink {
    text-decoration: none;
    color: var(--muted);
  }

  .tagLink:hover {
    opacity: 0.75;
  }

  .dateText {
    opacity: 0.78;
  }

  .plainArticle .h1 {
    font-size: clamp(1.45rem, 2.7vw, 1.82rem);
    line-height: 1.38;
    margin: 0 0 16px;
  }
</style>
