---
import BaseLayout from "../layouts/BaseLayout.astro";
import board from "../data/research-board.json";

const BASE = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";

function toHref(href?: string) {
  if (!href) return "";
  if (href.startsWith("http://") || href.startsWith("https://")) return href;
  return href.startsWith("/") ? `${BASE}${href.slice(1)}` : `${BASE}${href}`;
}

function parseLabel(raw: string) {
  const m = raw.match(/^[\t ]*/)?.[0] ?? "";
  const spaces = m.replace(/\t/g, "  ").length;
  const depth = Math.min(4, Math.floor(spaces / 2));
  const text = raw.replace(/^[\t ]+/, "");
  const guide = depth > 0 ? `${"· ".repeat(depth)}↳ ` : "";
  return { depth, text, guide };
}
---
<BaseLayout title="研究 | かもねぎ通信">
  <section class="boardPage">
    <header class="boardHead">
      <h2 class="h2" style="margin:0;">研究</h2>
      <p class="small headSub">{board.description}</p>
    </header>

    <div class="hr"></div>

    <section class="boardBox" aria-label={board.title}>
      <h3 class="boardTitle">研究ノートの整理</h3>
      <div class="groupStack">
        {board.groups?.map((group) => (
          <section class="groupBlock" aria-label={group.title}>
            <h4 class="groupTitle">{group.title}</h4>
            <ul class="itemList">
              {group.items?.map((item) => {
                const p = parseLabel(item.label);
                return (
                <li class="itemEntry" data-depth={String(p.depth)}>
                  {item.href ? (
                    <a class="itemLink" href={toHref(item.href)}>
                      {p.guide ? <span class="itemGuide" aria-hidden="true">{p.guide}</span> : null}
                      {p.text}
                    </a>
                  ) : (
                    <span class="itemText">
                      {p.guide ? <span class="itemGuide" aria-hidden="true">{p.guide}</span> : null}
                      {p.text}
                    </span>
                  )}
                </li>
              )})}
            </ul>
          </section>
        ))}
      </div>
    </section>
  </section>
</BaseLayout>

<style>
  .boardPage { width: min(100%, 940px); margin-inline: auto; display: grid; gap: 14px; }
  .boardHead { display: grid; gap: 4px; }
  .headSub { margin: 0; color: var(--muted); opacity: 0.8; }

  .boardBox {
    border: 0;
    border-radius: 0;
    background: transparent;
    padding: 0;
    display: grid;
    gap: 10px;
  }

  .boardTitle {
    margin: 0;
    font-size: 1.02rem;
    line-height: 1.35;
    font-weight: 500;
  }

  .groupStack { display: grid; gap: 10px; }

  .groupBlock {
    border: 1px solid rgba(64, 54, 40, 0.2);
    border-radius: 0;
    padding: 9px 10px;
    display: grid;
    gap: 6px;
    background: #fffefb;
  }

  .groupTitle {
    margin: 0;
    font-size: 0.88rem;
    color: #4d5f42;
    line-height: 1.35;
    letter-spacing: 0.02em;
    font-weight: 600;
  }

  .itemList {
    margin: 0;
    padding: 0;
    list-style: none;
    display: grid;
    gap: 4px;
  }

  .itemEntry {
    line-height: 1.45;
    min-width: 0;
    padding-left: 0;
  }

  .itemEntry[data-depth="1"] {
    padding-left: 0.9rem;
    border-left: 1px solid rgba(64, 54, 40, 0.18);
  }

  .itemEntry[data-depth="2"] {
    padding-left: 1.8rem;
    border-left: 1px solid rgba(64, 54, 40, 0.18);
  }

  .itemEntry[data-depth="3"] {
    padding-left: 2.7rem;
    border-left: 1px solid rgba(64, 54, 40, 0.18);
  }

  .itemEntry[data-depth="4"] {
    padding-left: 3.6rem;
    border-left: 1px solid rgba(64, 54, 40, 0.18);
  }

  .itemLink,
  .itemText {
    font-size: 0.9rem;
    color: var(--ink);
    text-decoration: none;
    overflow-wrap: anywhere;
    white-space: normal;
    tab-size: 2;
  }

  .itemGuide {
    color: var(--muted);
    opacity: 0.75;
  }

  .itemLink:hover { text-decoration: underline; }

</style>
