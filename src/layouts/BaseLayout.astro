---
import "../styles/global.css";
import Header from "../components/Header.astro";
import SunMenu from "../components/SunMenu.astro";

const { title = "かもねぎ通信" } = Astro.props;
---
<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
  <SunMenu />

  <div id="pageWrap" class="pageWrap">
    <div class="container">
      <Header />
      <div class="hr"></div>
      <slot />
      <footer class="footer">
        <div>© {new Date().getFullYear()} かもねぎ通信</div>
        <div class="mono small">GitHub Pages / Astro</div>
      </footer>
    </div>
  </div>
</body>

</html>
